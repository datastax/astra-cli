		<name>DataStax</name>
		<url>https://www.datastax.com</url>
	</organization>

	<licenses>
		<license>
			<name>Apache 2</name>
			<url>${project.baseUri}/src/license/apache_v2/license.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

</project>
